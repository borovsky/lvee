%p
  = link_to "Send mail to checked", "#", id: 'send_mail_to_checked'

%table.data#users
  %thead
    %tr
      %th Id
      %th= check_box_tag("all", '1', false, :id => 'check_all')
      %th= t('label.user.login')
      %th= t('label.user.full_name')
      %th Active?
      %th Conferences
      %th Role
      %th Actions
  - @users.each_with_index do |user, i|
    %tr{:id=> user, :class=> %w(even odd)[i % 2]}
      %td= i+1
      %td= check_box_tag "to_user[]", user.id, false, :class => "user_check", :id => "to_#{user.id}"
      %td= user.login
      %td= link_to user.full_name, user_path(user.id)
      %td= user.active?
      %td= user.conference_registrations.where("status_name = ? OR status_name = ?", NEW_STATUS, APPROVED_STATUS).map{|r| r.conference.name}.join(', ')
      %td
        = select_tag("role", options_for_select(ROLES, user.role), :id => "role_#{user.id}", :class => "change_role_select")
      %td
        = link_to(t('label.common.delete'), admin_user_path(user), |
          method: :delete, data: {confirm: t('message.common.sure')}, remote: true)
        |
        = link_to('Send Email', admin_mail_user_path(:to_list => user))
